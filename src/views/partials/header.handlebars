</style>

<script>
    document.addEventListener("DOMContentLoaded", async () => {
        const menuItems = document.getElementById("menu-items");
        const userContainer = document.getElementById("user-container");
        const userName = document.getElementById("user-name");
        const userMenu = document.getElementById("user-menu");

        try {
            const userResponse = await fetch("/api/sessions/current", { credentials: "include" });
            const userData = await userResponse.json();

            if (userData.user) {
                userName.innerText = `ğŸ‘¤ ${userData.user.first_name || "Usuario"}`;

                // Agregar el menÃº dinÃ¡micamente segÃºn el rol
                menuItems.innerHTML = "";
                const menuItem = document.createElement("li");
                const menuLink = document.createElement("a");

                if (userData.user.isAdmin) {
                    menuLink.href = "/realtimeproducts";
                    menuLink.textContent = "Administrar CatÃ¡logo";
                } else {
                    menuLink.href = "/catalog";
                    menuLink.textContent = "CatÃ¡logo";
                }

                menuItem.appendChild(menuLink);
                menuItems.appendChild(menuItem);
            }
        } catch (error) {
            console.error("âš ï¸ No se pudo obtener el usuario:", error);
        }

        userContainer.addEventListener("click", () => {
            userMenu.classList.toggle("active");
        });

        document.addEventListener("click", (event) => {
            if (!userMenu.contains(event.target) && !userContainer.contains(event.target)) {
                userMenu.classList.remove("active");
            }
        });

        document.getElementById("logout-btn").addEventListener("click", async () => {
            if (confirm("Â¿EstÃ¡s seguro de que deseas cerrar sesiÃ³n?")) {
                try {
                    await fetch("/api/sessions/logout", { method: "POST", credentials: "include" });
                    window.location.href = "/login";
                } catch (error) {
                    console.error("âŒ Error cerrando sesiÃ³n:", error);
                }
            }
        });
    });
</script>
